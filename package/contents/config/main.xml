<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0 http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
    <kcfgfile name=""/>

    <group name="General">
      <entry name="card" type="String">
        <default></default>
      </entry>
      <entry name="max_clients" type="Int">
        <default>3</default>
      </entry>

      <entry name="threshold_3d" type="Int">
        <default>10</default>
      </entry>
      <entry name="threshold_video" type="Int">
        <default>1</default>
      </entry>
      <entry name="threshold_video_enhance" type="Int">
        <default>1</default>
      </entry>
      <entry name="threshold_blitter" type="Int">
        <default>1</default>
      </entry>

      <!-- 0: disable, 1: badge, 2: beside icon -->
      <entry name="showUsageMode" type="Int">
        <default>1</default>
      </entry>

      <!-- 0: percentage, 1: color -->
      <entry name="badgeStyle" type="Int">
        <default>1</default>
      </entry>

      <!-- 0: current engine, 1: total (rc6) -->
      <entry name="usageSource" type="Int">
        <default>0</default>
      </entry>

      <entry name="needsToBeSquare" type="Bool">
        <default>false</default>
      </entry>
    </group>
</kcfg>
